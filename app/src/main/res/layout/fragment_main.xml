<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    	<View 
	    android:layout_width="match_parent"
	    android:layout_height="30dp"/>
		<!-- Button to go to race screen -->
	    <Button 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="30dp"
	    android:paddingBottom="30dp"
	    android:background="@color/slsc_green"
	    android:text="@string/races"
	    android:textSize="40sp"
	    android:textColor="@color/white"
	    android:onClick="goRaceScreen"/>
	    <View 
	    android:layout_width="match_parent"
	    android:layout_height="30dp"/>
		<!-- Button to go to swimmer screen -->
	    <Button 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	   	android:paddingTop="30dp"
	    android:paddingBottom="30dp"
	    android:background="@color/slsc_yellow"
	    android:text="@string/swimmers"
	    android:textSize="40sp" 
	    android:textColor="@color/white"
	    android:onClick="goSwimmerScreen"/>
	    <View 
	    android:layout_width="match_parent"
	    android:layout_height="30dp"/>
		<!-- Button to go to password screen -->
	    <Button 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="30dp"
	    android:paddingBottom="30dp"
	    android:background="@color/slsc_blue"
	    android:text="@string/enter_results"
	    android:textSize="40sp"
	    android:textColor="@color/white"
	    android:onClick="goPasswordScreen"/>
    
</LinearLayout>
</ScrollView>
